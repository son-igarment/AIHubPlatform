          "severity",
          "user_id"
        ],
        "type": "object",
        "properties": {
          "log_id": {
            "type": "integer",
            "format": "int32"
          },
          "user_id": {
            "type": "integer",
            "format": "int32"
          },
          "task_id": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "log_type": {
